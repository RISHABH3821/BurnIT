<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.WorkoutActivity">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera"
        android:keepScreenOn="true"
        app:cameraFacing="front"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.brewingjava.burnit.Helpers.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:elevation="1dp"
        android:layout_above="@id/save_exercise"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/counterText"
        android:background="#10000000"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_black"
        android:textSize="100sp"
        android:visibility="visible"
        android:layout_above="@id/save_exercise"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/rep_count"
        android:background="@drawable/ic_ellipse_border"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_black"
        android:textSize="36sp"
        android:text="0"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/save_exercise"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp"/>

    <TextView
        android:id="@+id/burned_calories"
        android:background="@drawable/ic_ellipse_border"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/nunito_black"
        android:textSize="36sp"
        android:text="0"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/save_exercise"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp"/>

    <ImageView
        android:layout_alignStart="@id/burned_calories"
        android:layout_alignBottom="@id/burned_calories"
        android:layout_marginStart="-8dp"
        android:src="@drawable/ic_fire"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <TextView
        android:fontFamily="@font/nunito_black"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/main_color"
        android:padding="16dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:id="@+id/save_exercise"
        android:text="Mark Complete"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>